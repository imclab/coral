#!/usr/bin/env ruby
## Extracts github project "owner/repo_name" pair from URLs in input.

name  = /\w[\w.-]*/
owner = /[a-zA-Z0-9-]+/
url1  = %r{ :// (?:wiki\.)?   github\.com / (#{owner}) / (#{name})  }x
url2  = %r{                 @ github\.com : (#{owner}) / (#{name})  }x
url3  = %r{ :// (#{owner}) \. github\.com / (#{name})               }x

while gets
  case $_
  when url1, url2
    puts "#$1/" + $2.sub(/\.git$/, '')
  when url3
    puts "#$1/#$2}"
  end
end
